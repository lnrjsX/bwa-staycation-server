<div class="card mb-4 mt-3">
   <div class="card-body">
      <div class="row">
         <div class="col-md-5">
            <img src="http://localhost:3000/<%= bookings.payments.proofPayment %>" alt="Image"
               class="rounded mx-auto d-block" style="width: 70%;
                     height: auto; display: block;">
         </div>
         <div class="col-md-7">
            <div class="table-responsive">
               <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                  <thead>
                     <tr>
                        <th>Nama Member</th>
                        <th>Total</th>
                        <th>Bank From</th>
                        <th>Title</th>
                     </tr>
                  </thead>
                  <tr>
                     <th>
                        <%= bookings.memberId.firstName %>
                     </th>
                     <th>
                        <%= bookings.total %>
                     </th>
                     <th>
                        <%= bookings.payments.bankFrom %>
                     </th>
                     <th>
                        <%= bookings.itemId.title %>
                     </th>
                  </tr>
                  <tbody>
                  </tbody>
               </table>
            </div>
            <div class="row ml-1">
               <% if (bookings.payments.status==="Proses" ) { %>
                  <form action="/admin/booking/<%= bookings._id %>/confirmation?_method=PUT" method="POST">
                     <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-check"></i> Confirmation
                     </button>
                  </form>
                  <form action="/admin/booking/<%= bookings._id %>/reject?_method=PUT" method="POST" class="ml-3">
                     <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-times"></i> Reject
                     </button>
                  </form>

                  <% } else { %>
                     <a href="/admin/booking" class="btn btn-info btn-sm ml-1">
                        <i class="fas fa-backward"></i> Back
                     </a>
                     <% } %>
            </div>
         </div>
      </div>
   </div>
</div>