<div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="show-item-tab">
   <div class="card mb-4 mt-3">
      <div class="card-body">
         <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
               <thead>
                  <tr>
                     <th>No</th>
                     <th>Title</th>
                     <th>Price</th>
                     <th>Country</th>
                     <th>City</th>
                     <th>Action</th>
                  </tr>
               </thead>
               <tbody>
                  <% items.forEach((item, i)=> { %>
                     <tr>
                        <td>
                           <%= ++i %>
                        </td>
                        <td>
                           <%= item.title %>
                        </td>
                        <td>
                           <strong>$</strong>
                           <%= item.price %>
                        </td>
                        <td>
                           <%= item.country %>
                        </td>
                        <td>
                           <%= item.city %>
                        </td>
                        <td>
                           <form action="/admin/item/<%= item.id %>/delete?_method=DELETE" method="POST">
                              <a href="/admin/item/show-image/<%= item.id %>" class="btn btn-info btn-circle btn-sm">
                                 <i class="fas fa-image child-button-update"></i>
                              </a>
                              <a href="/admin/item/<%= item.id %>" class="btn btn-warning btn-circle btn-sm">
                                 <i class="fas fa-edit child-button-update"></i>
                              </a>
                              <button type="submit" class="btn btn-danger btn-circle btn-sm">
                                 <i class="fas fa-trash"></i>
                              </button>
                              <a href="/admin/item/show-detail-item/<%= item.id %>"
                                 class="btn btn-success btn-circle btn-sm">
                                 <i class="fas fa-info child-button-update"></i>
                              </a>
                           </form>
                        </td>
                     </tr>
                     <% }) %>
               </tbody>
            </table>
         </div>
      </div>
   </div>
</div>
<!-- DataTales Example -->