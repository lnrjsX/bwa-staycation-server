<div class="tab-pane fade show active" id="nav-profile" role="tabpanel" aria-labelledby="add-item">
   <div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="show-item-tab">
      <div class="card mb-4 mt-3">
         <div class="card-body">
            <form method="POST" action="/admin/item/<%= items._id %>?_method=PUT" enctype="multipart/form-data">
               <div class="modal-body">
                  <div class="form-group">
                     <label for="name">Title</label>
                     <input type="text" class="form-control" value="<%= items.title %>" name="title"
                        placeholder="Masukkan Title" required>
                  </div>
                  <div class="form-group">
                     <label for="name">Price</label>
                     <input type="number" class="form-control" value="<%= items.price %>" name="price"
                        placeholder="Masukkan Price" required>
                  </div>
                  <div class="form-group">
                     <label for="name">City</label>
                     <input type="text" class="form-control" name="city" value="<%= items.city %>"
                        placeholder="Masukkan City" required>
                  </div>
                  <div class="form-group">
                     <label for="name">Category</label>
                     <select name="categoryId" class="form-control">
                        <option value="<%= items.categoryId._id %>">
                           <%= items.categoryId.name %>
                        </option>
                        <% categorys.forEach(category=> { %>
                           <% if (category.name !==items.categoryId.name) { %>
                              <option value="<%= category._id %>">
                                 <%= category.name %>
                              </option>
                              <% } %>
                                 <% }) %>
                     </select>
                  </div>
                  <div class="form-group">
                     <label for="name">Image</label>
                     <input type="file" class="form-control" name="image" placeholder="Pilih Image" multiple>
                  </div>
                  <div class="form-group">
                     <label for="name">Description</label>
                     <textarea name="about" class="form-control"><%= items.description %></textarea>
                  </div>
                  <div class="modal-footer">
                     <a href="/admin/item" class="btn btn-secondary">&laquo; Kembali</a>
                     <button type="submit" class="btn btn-primary">Ubah</button>
                  </div>
            </form>
         </div>
      </div>
   </div>
</div>